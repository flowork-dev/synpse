{
    "id": "article_generator_tools",
    "name": "Article Generator Tools",
    "version": "1.2.0",
    "icon_file": "icon.png",
    "author": "AWENK AUDICO & Gemini",
    "email": "contributor@teetah.art",
    "website": "www.teetah.art",
    "description": "A tool that takes a detailed prompt and uses a specified AI provider to generate an article. Designed to be used by an Agent Host.",
    "type": "PLUGIN",
    "entry_point": "processor.ArticleGeneratorModule",
    "tier": "free",
    "behaviors": [
        "retry"
    ],
    "requires_services": [
        "logger",
        "loc",
        "kernel"
    ],
    "display_properties": {
        "shape": "agent_brain",
        "icon_file": "icon.png"
    },
    "properties": [
        {
            "id": "selected_ai_provider",
            "type": "enum",
            "label": "loc.prop_article_gen_provider_label"
        },
        {
            "id": "prompt_source_variable",
            "type": "string",
            "label": "loc.prop_article_gen_prompt_source_label",
            "default": "data.optimal_prompt"
        }
    ],
    "output_ports": [
        {
            "name": "success",
            "display_name": "Success",
            "port_position": "top"
        }
    ],
    "output_schema": [
        {
            "name": "data.article_text",
            "type": "string",
            "description": "The final article text generated by the AI."
        }
    ]
}